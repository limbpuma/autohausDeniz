---
import Button from "../gui/Button.astro";
import Typography from "../gui/Typography.astro";
import WrenchScrewdriverIcon from "astro-heroicons/solid/WrenchScrewdriver.astro";
import { getI18N } from "../../utils/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const carouselItems = i18n.HERO;
---

<div
  id="default-carousel"
  class="relative w-full h-full mb-4"
  data-carousel="slide"
>
  <!-- Carousel wrapper -->
  <div class="relative h-full overflow-hidden">
    {
      carouselItems.map((item) => {
        
        return (
          <div
            class="flex items-center justify-center w-full h-full"
            data-carousel-item
          >
            <img
              src={item.IMAGE}
              class="absolute w-full h-full object-cover"
              alt="Background Image"
            />
            <div class="absolute inset-0 bg-black opacity-65" />

            <div class="container || absolute inset-0 grid md:grid-cols-[1fr_1fr] justify-center items-center">
              <div class="grid gap-4">
                <p
                  class="text-lg md:text-xl  text-white"
                  data-swiper-parallax="300"
                >
                  {item.TITLE}
                </p>
                <Typography
                  as="h1"
                  variant="h1"
                  color="white"
                  data-swiper-parallax="100"
                >
                  {item.SUBTITLE}
                </Typography>
                <p
                  class="text-md md:text-xl text-white text-center md:text-left"
                  data-swiper-parallax="400"
                >
                  {item.DESCRIPTION}
                </p>
                <Button href="appointment.html">{item.BUTTON}</Button>
              </div>
            </div>
          </div>
        );
      })
    }
  </div>

  <!-- Slider indicators -->
  <div
    class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse"
  >
    {
      carouselItems.map((item, index) => {
        return (
          <button
            type="button"
            class="w-3 h-3 rounded-full"
            aria-current="true"
            aria-label={`Slide ${index + 1}`}
            data-carousel-slide-to={index}
          />
        );
      })
    }
  </div>
